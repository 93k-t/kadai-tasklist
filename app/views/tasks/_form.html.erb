<%= form_with(model: @task) do |f| %>
  <div id="error_explanation">
    <% if task.errors.any? %>
      <ul>
        <% tasks.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
   
    <% end %>
  
    <%= f.label :status, "ステータス" %>
    <%= f.text_field :status %>
    
    <%= f.label :content, "タスク" %>
    <%= f.text_field :content %>
    
    <%= f.submit "投稿" %>
  </div>
<% end %>